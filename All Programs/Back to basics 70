#using radio button 
#unlike checkboxes, radio button allow you to make one selection at a time

class Application(Frame):
    """GUI with radio button"""
    def __init__(self,master):
        """this is the constructor"""
        super(Application,self).__init__(self,master)
        self.grid()
        self.create_widget()

    
    def create_widgets(self):
        """Create the first label"""
        Lable(self,text="Choose your favourite cheese").grid(row=0,column=0,sticky=W)
        Label(self,text="Select One").grid(row=1,column=0,sticky=W)